<!-- product grid -->
<div class="bg-white py-6 sm:py-8 lg:py-12">
  <div class="max-w-screen-2xl px-4 md:px-8 mx-auto">
    <!-- text - start -->
    <div class="mb-10 md:mb-16">
      <h2 class="text-gray-800 text-2xl lg:text-3xl font-bold text-center mb-4 md:mb-6">Top deals this week</h2>
    </div>
    <!-- text - end -->

    <div class="grid sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4">
      <!-- product - start -->
    {% for collection in collections %}
      {% for product in collection.products %}
        {% if product.tags contains 'top-deals' %}
        {% assign prod = product %}
        <div>
          <a href="#" class="group h-auto block bg-gray-100 overflow-hidden relative">
            {% if prod.featured_image != blank %}
              <img src="{{ prod.featured_image | img_url: 'large' }}" loading="lazy" alt="Photo by Austin Wade" class="w-full h-full object-cover object-center group-hover:scale-110 transition duration-200" />
            {% else %}
              {{ 'image' | placeholder_svg_tag }}"
            {% endif %}
            {% if prod.price_varies %}
              <span class="text-red-500 line-through mb-0.5">{{ prod.compare_at_price_max | money_with_currency}}</span><span class="font-semibold text-red-500">Save</span>
              <span class="font-bold text-red-500">{{ prod.compare_at_price_max | minus: prod.price | times: 100.0 |    divided_by: prod.compare_at_price_max | money_without_currency | times: 100 | remove: '.0' | append: '%'}}</span>            
            {% endif %}
          </a>

          <div class="flex flex-col justify-between items-start rounded-b-lg gap-2 p-4">
            <div class="flex flex-col ">
              <a href="#" class="text-gray-800 hover:text-gray-500 lg:text-lg font-bold transition duration-100">{{ prod.title }}
              </a>
              <div class="space-x-1">
                <span class="font-semibold text-md">{{ prod.price_max | money_with_currency }}</span><span class="text-sm line-through">{{ prod.compare_at_price | money_with_currency }}</span>
              </div>
            </div>
            <button class="bg-green-700 text-white w-full py-1 hover:scale-105 duration-75 hover:bg-green-600">Add to cart</button>
          </div>
        </div>
        {% endif %}    
      {% endfor %}
    {% endfor %}
      <!-- product - end -->

    </div>
  </div>
</div>
